<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>تماس تصویری - RemoteVM</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .fullscreen-iframe {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 9999;
      border: none;
    }
    .loader {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #3498db;
      border-radius: w-full;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: 20px auto;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 flex items-center justify-center min-h-screen transition-colors duration-300">
  <div class="container mx-auto p-6 max-w-lg bg-white dark:bg-gray-800 rounded-lg shadow-lg">
    <div class="flex justify-between items-center mb-6">
      <h3 class="text-2xl font-bold text-center text-gray-800 dark:text-gray-100">تماس تصویری با RemoteVM</h3>
      <button 
        id="themeToggle" 
        class="p-2 rounded-full bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-100" 
        aria-label="تغییر تم"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 2a8 8 0 100 16 8 8 0 000-16zm0 14a6 6 0 110-12 6 6 0 010 12zm-1-6a1 1 0 112 0 1 1 0 01-2 0z"/>
        </svg>
      </button>
    </div>
    <div class="flex flex-wrap justify-center gap-4 mb-6">
      <button 
        onclick="startVDOCall()" 
        class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-300" 
        aria-label="ساخت اتاق تماس"
      >
        ساخت اتاق تماس
      </button>
      <button 
        id="fsButton" 
        onclick="goFullscreen()" 
        class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition duration-300 hidden" 
        aria-label="نمایش تمام‌صفحه"
      >
        نمایش تمام‌صفحه
      </button>
      <button 
        id="stopCallButton" 
        onclick="stopVDOCall()" 
        class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 transition duration-300 hidden" 
        aria-label="توقف تماس"
      >
        توقف تماس
      </button>
      <button 
        id="resetButton" 
        onclick="resetPage()" 
        class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition duration-300 hidden" 
        aria-label="ریست صفحه"
      >
        ریست صفحه
      </button>
    </div>
    <div class="mb-6">
      <label for="qualitySelect" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">کیفیت ویدیو:</label>
      <select 
        id="qualitySelect" 
        class="w-full p-3 border rounded-lg text-gray-700 dark:text-gray-300 bg-gray-50 dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        aria-label="انتخاب کیفیت ویدیو"
      >
        <option value="720">720p (پیش‌فرض)</option>
        <option value="1080">1080p</option>
      </select>
    </div>
    <div id="loader" class="loader hidden"></div>
    <iframe 
      id="vdoFrame" 
      class="w-full h-[400px] md:h-[600px] rounded-lg hidden border-0" 
      allow="camera; microphone; fullscreen"
    ></iframe>
    <div id="obsSection" class="mt-6 hidden">
      <label for="obsLink" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">لینک مخصوص OBS:</label>
      <div class="flex gap-2">
        <input 
          type="text" 
          id="obsLink" 
          class="w-full p-3 border rounded-lg text-gray-700 dark:text-gray-300 bg-gray-50 dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" 
          readonly 
          aria-label="لینک OBS"
        >
        <button 
          onclick="copyOBSLink()" 
          class="bg-gray-800 text-white px-4 py-3 rounded-lg hover:bg-gray-900 transition duration-300" 
          aria-label="کپی لینک OBS"
        >
          کپی لینک
        </button>
      </div>
      <p id="copyMessage" class="mt-2 text-sm text-green-600 dark:text-green-400 hidden">لینک با موفقیت کپی شد!</p>
      <p id="errorMessage" class="mt-2 text-sm text-red-600 dark:text-red-400 hidden"></p>
    </div>
  </div>

  <script>
    let obsLink = "";
    let isCallActive = false;

    function startVDOCall() {
      if (isCallActive) return; // جلوگیری از اجرای چندباره
      isCallActive = true;
      showLoader(true);

      const roomId = "room" + Math.floor(Math.random() * 100000);
      const quality = document.getElementById('qualitySelect').value;
      const resolution = quality === "1080" ? "&width=1920&height=1080" : "&width=1280&height=720";
      const pushURL = `https://live.remotevm.ir/?push=${roomId}&autostart&cleanish&transparent&scale=cover${resolution}`;
      obsLink = `https://live.remotevm.ir/?view=${roomId}`;

      const iframe = document.getElementById('vdoFrame');
      iframe.src = pushURL;
      iframe.classList.remove('hidden');
      iframe.onload = () => showLoader(false);

      document.getElementById('obsLink').value = obsLink;
      document.getElementById('obsSection').classList.remove('hidden');
      document.getElementById('fsButton').classList.remove('hidden');
      document.getElementById('stopCallButton').classList.remove('hidden');
      document.getElementById('resetButton').classList.remove('hidden');
    }

    function stopVDOCall() {
      isCallActive = false;
      const iframe = document.getElementById('vdoFrame');
      iframe.src = "";
      iframe.classList.add('hidden');
      document.getElementById('obsSection').classList.add('hidden');
      document.getElementById('fsButton').classList.add('hidden');
      document.getElementById('stopCallButton').classList.add('hidden');
      showMessage('تماس با موفقیت متوقف شد', 'success');
    }

    function resetPage() {
      isCallActive = false;
      document.getElementById('vdoFrame').src = "";
      document.getElementById('vdoFrame').classList.add('hidden');
      document.getElementById('obsSection').classList.add('hidden');
      document.getElementById('fsButton').classList.add('hidden');
      document.getElementById('stopCallButton').classList.add('hidden');
      document.getElementById('resetButton').classList.add('hidden');
      document.getElementById('obsLink').value = "";
      document.getElementById('qualitySelect').value = "720";
      showMessage('صفحه با موفقیت ریست شد', 'success');
    }

    function copyOBSLink() {
      const input = document.getElementById("obsLink");
      const copyMessage = document.getElementById("copyMessage");
      const errorMessage = document.getElementById("errorMessage");

      navigator.clipboard.writeText(input.value)
        .then(() => {
          showMessage('لینک با موفقیت کپی شد!', 'success');
        })
        .catch(() => {
          input.select();
          try {
            document.execCommand("copy");
            showMessage('لینک با موفقیت کپی شد!', 'success');
          } catch (err) {
            showMessage('خطا در کپی لینک!', 'error');
          }
        });
    }

    function goFullscreen() {
      const iframe = document.getElementById("vdoFrame");
      iframe.classList.add("fullscreen-iframe");

      if (iframe.requestFullscreen) {
        iframe.requestFullscreen().catch(err => showMessage('خطا در ورود به حالت تمام‌صفحه!', 'error'));
      } else if (iframe.mozRequestFullScreen) {
        iframe.mozRequestFullScreen();
      } else if (iframe.webkitRequestFullscreen) {
        iframe.webkitRequestFullscreen();
      } else if (iframe.msRequestFullscreen) {
        iframe.msRequestFullscreen();
      }
    }

    function showLoader(show) {
      document.getElementById('loader').classList.toggle('hidden', !show);
    }

    function showMessage(message, type) {
      const messageElement = document.getElementById(type === 'success' ? 'copyMessage' : 'errorMessage');
      messageElement.textContent = message;
      messageElement.classList.remove('hidden');
      setTimeout(() => messageElement.classList.add('hidden'), 2000);
    }

    document.addEventListener("fullscreenchange", () => {
      const iframe = document.getElementById("vdoFrame");
      if (!document.fullscreenElement) {
        iframe.classList.remove("fullscreen-iframe");
      }
    });

    // تغییر تم
    document.getElementById('themeToggle').addEventListener('click', () => {
      document.body.classList.toggle('dark');
      localStorage.setItem('theme', document.body.classList.contains('dark') ? 'dark' : 'light');
    });

    // بارگذاری تم ذخیره‌شده
    if (localStorage.getItem('theme') === 'dark') {
      document.body.classList.add('dark');
    }
  </script>
</body>
</html>
